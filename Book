import java.util.ArrayList;
import java.util.List;

public class Book {
    private String title;
    private String author;
    private String ISBN;
    private static List<Book> bookCollection = new ArrayList<>();

        public Book(String title, String author, String ISBN) {
    }
    
    public static void addBook(Book book) {
        bookCollection.add(book);
        System.out.println("Book added: " + book.title);
    }
    
    public static void removeBook(String ISBN) {
        bookCollection.removeIf(book -> book.ISBN.equals(ISBN));
        System.out.println("Book with ISBN " + ISBN + " removed");
    }
    
    public static void displayBooks() {
        System.out.println("\nBook Collection:");
        for (Book book : bookCollection) {
            System.out.println("Title: " + book.title + ", Author: " + book.author + ", ISBN: " + book.ISBN);
        }
    }
        public static void main(String[] args) {
        Book book1 = new Book("Java Programming", "John Doe", "123456");
        Book book2 = new Book("Python Basics", "Jane Smith", "789012");
        
        addBook(book1);
        addBook(book2);
        displayBooks();
        
        removeBook("123456");
        displayBooks();
    }
}
